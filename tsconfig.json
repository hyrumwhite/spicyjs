{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "dist/types",
		"sourceMap": false
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
